<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/splashScreenFragment">

  <fragment
    android:id="@+id/splashScreenFragment"
    android:name="com.mkamilmistar.gold_market.fragments.SplashScreenFragment"
    android:label="SplashScreenFragment" >
    <action
      android:id="@+id/action_splashScreenFragment_to_onBoardingFragment"
      app:destination="@id/onBoardingFragment" />
  </fragment>
  <fragment
    android:id="@+id/onBoardingFragment"
    android:name="com.mkamilmistar.gold_market.fragments.OnBoardingFragment"
    android:label="OnBoardingFragment" >
    <action
      android:id="@+id/action_onBoardingFragment_to_loginFragment"
      app:destination="@id/loginFragment" />
  </fragment>
  <fragment
    android:id="@+id/loginFragment"
    android:name="com.mkamilmistar.gold_market.fragments.LoginFragment"
    android:label="LoginFragment" >
    <action
      android:id="@+id/action_loginFragment_to_registerFragment"
      app:destination="@id/registerFragment" />
    <action
      android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
      app:destination="@id/forgetPasswordFragment" />
    <action
      android:id="@+id/action_loginFragment_to_homeFragment"
      app:destination="@id/homeFragment" />
  </fragment>
  <fragment
    android:id="@+id/registerFragment"
    android:name="com.mkamilmistar.gold_market.fragments.RegisterFragment"
    android:label="RegisterFragment" >
    <action
      android:id="@+id/action_registerFragment_to_termAndConditionFragment"
      app:destination="@id/termAndConditionFragment" />
    <action
      android:id="@+id/action_registerFragment_to_loginFragment"
      app:destination="@id/loginFragment" />
  </fragment>
  <fragment
    android:id="@+id/forgetPasswordFragment"
    android:name="com.mkamilmistar.gold_market.fragments.ForgetPasswordFragment"
    android:label="ForgetPasswordFragment" />
  <fragment
    android:id="@+id/termAndConditionFragment"
    android:name="com.mkamilmistar.gold_market.fragments.TermAndConditionFragment"
    android:label="TermAndConditionFragment" />
  <fragment
    android:id="@+id/homeFragment"
    android:name="com.mkamilmistar.gold_market.fragments.main.HomeFragment"
    android:label="HomeFragment" >
    <action
      android:id="@+id/action_homeFragment_to_historyFragment"
      app:destination="@id/historyFragment" />
    <action
      android:id="@+id/action_homeFragment_to_settingFragment"
      app:destination="@id/settingFragment" />
  </fragment>
  <fragment
    android:id="@+id/historyFragment"
    android:name="com.mkamilmistar.gold_market.fragments.main.HistoryFragment"
    android:label="HistoryFragment" >
    <action
      android:id="@+id/action_historyFragment_to_homeFragment"
      app:destination="@id/homeFragment" />
    <action
      android:id="@+id/action_historyFragment_to_settingFragment"
      app:destination="@id/settingFragment" />
  </fragment>
  <fragment
    android:id="@+id/settingFragment"
    android:name="com.mkamilmistar.gold_market.fragments.main.SettingFragment"
    android:label="fragment_setting"
    tools:layout="@layout/fragment_setting" >
    <action
      android:id="@+id/action_settingFragment_to_homeFragment"
      app:destination="@id/homeFragment" />
    <action
      android:id="@+id/action_settingFragment_to_historyFragment"
      app:destination="@id/historyFragment" />
  </fragment>
</navigation>
